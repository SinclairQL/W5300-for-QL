ERR_OM            equ      -3          ; Out of memory
ERR_NF            equ      -7          ; Not found
ERR_BP            equ      -15         ; Bad parameter
BV_RIP            equ      $58         ; Offset to maths stack address store in basic variables
HEAP_SIZE         equ      $800
USER_HEAP_SIZE    equ      $400        ; Number of bytes reserved for user heap
DNS_MAX_NAME_LEN  equ      254         ; 255 octets DNS label encoded '3www9microsoft3com0', with a possible trailing '.' root domain
IP_GETHOSTBYNAME  equ      $5E
QE_IO_DRV_INFO    equ      $7E
QE_MEM_UH_PTR     equ      $28         ; Long word pointer to user heap base address (needed for QDOS user heap MT_ALLOC calls)
QE_MEM_HOSTNAME   equ      $100        ; Offset for buffer to contain a DNS hostname, maximum length of DNS hostname is 255 octets
QE_MEM_USER_HEAP  equ      $200        ; Offset to start of user heap
